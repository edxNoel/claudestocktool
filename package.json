{
  "name": "agentic-ai-stock-investigation",
  "version": "1.0.0",
  "description": "Monorepo for Agentic AI Stock Investigation System with Next.js frontend and FastAPI backend",
  "scripts": {
    "install-all": "npm install --prefix frontend && pip install -r backend/requirements.txt",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:backend": "cd backend && python -m uvicorn main:app --reload --host 127.0.0.1 --port 8000",
    "build": "npm run build --prefix frontend",
    "build:frontend": "npm run build --prefix frontend",
    "start:frontend": "npm run start --prefix frontend",
    "start:backend": "cd backend && python -m uvicorn main:app --host 0.0.0.0 --port 8000",
    "vercel-build": "npm run build:frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "workspaces": [
    "frontend"
  ]
}